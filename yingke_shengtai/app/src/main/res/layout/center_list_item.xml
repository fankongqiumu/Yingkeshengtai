<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_bg"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/center_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:textColor="@color/text_big_color"
        android:textSize="@dimen/sixteen"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/center_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/text_little_color"
        android:textSize="@dimen/fourty_sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    <com.yingke.shengtai.view.FrescoImageView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/center_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        fresco:actualImageScaleType="fitCenter"
        fresco:placeholderImage="@android:color/white"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundedCornerRadius="1px"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/center_item_content"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:lines="4"
        android:lineSpacingMultiplier="1.05"
        android:textColor="@color/text_little_color"
        android:textSize="@dimen/fifty_sp"
        android:layout_marginTop="8dp"
        />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/text_big_color"
        android:textSize="@dimen/fourty_sp"
        android:text="查看更多"
        android:layout_marginTop="15dp"
        />
</LinearLayout>
</LinearLayout>
