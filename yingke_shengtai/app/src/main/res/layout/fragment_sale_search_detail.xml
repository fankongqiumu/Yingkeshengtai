<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">
        <ImageView
            android:id="@+id/view_title_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/nav_back_icon"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/textzhuanjie"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/green_bg"
            android:textSize="17sp"
            android:text="修改"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/view_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/main_title_size"
            android:layout_marginRight="10dp"
            android:textColor="@color/white_color"/>
    </RelativeLayout>
    <jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_swipe"
        android:layout_below="@id/titles"
        >
        <ScrollView
            android:id="@+id/fragment_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    >
                    <ImageView
                        android:id="@+id/item_image_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/tab_busiess_norma"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:id="@+id/item_text_progress"
                        android:layout_width="75dp"
                        android:layout_height="28dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:textSize="14sp"
                        android:background="@mipmap/dark_blue_bg"
                        android:textColor="@color/white_color"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/item_text_progress"
                        android:layout_toRightOf="@id/item_image_left"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:id="@+id/item_text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/fifty_sp"
                            android:ellipsize="end"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/text_big_color"/>
                        <TextView
                            android:id="@+id/item_text_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginLeft="15dp"
                            android:paddingTop="6dp"
                            android:layout_marginRight="15dp"
                            android:textSize="@dimen/fourty_sp"
                            android:textColor="@color/text_little_color"/>
                    </LinearLayout>


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_big_color"
                        android:textSize="15sp"
                        android:text="@string/custom_name"/>
                    <TextView
                        android:id="@+id/custom_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_little_color"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_big_color"
                        android:textSize="15sp"
                        android:text="@string/business_number"/>
                    <TextView
                        android:id="@+id/business_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_little_color"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_big_color"
                        android:textSize="15sp"
                        android:text="@string/hetong_number"/>
                    <TextView
                        android:id="@+id/hetong_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_little_color"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_big_color"
                        android:textSize="15sp"
                        android:text="@string/write_time"/>
                    <TextView
                        android:id="@+id/write_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_little_color"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:id="@+id/linear_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_big_color"
                        android:textSize="15sp"
                        android:text="@string/business_comment_name"/>
                    <TextView
                        android:id="@+id/business_recoment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_little_color"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:id="@+id/linear_totleprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_big_color"
                        android:textSize="15sp"
                        android:text="@string/business_totle_price"/>
                    <TextView
                        android:id="@+id/business_totle_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_little_color"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:id="@+id/linear_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_big_color"
                        android:textSize="15sp"
                        android:text="@string/business_price"/>
                    <TextView
                        android:id="@+id/business_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_little_color"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:id="@+id/linear_recommendprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_big_color"
                        android:textSize="15sp"
                        android:text="@string/business_comment_price"/>
                    <TextView
                        android:id="@+id/business_recomment_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_little_color"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
                <RelativeLayout
                    android:id="@+id/relContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >
                    <TextView
                        android:id="@+id/text"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_big_color"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:text="@string/business_content"/>
                    <TextView
                        android:id="@+id/business_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/text"
                        android:textColor="@color/text_little_color"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/set_list_arrow"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
                <RelativeLayout
                    android:id="@+id/relJilu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >
                    <TextView
                        android:id="@+id/sss"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_big_color"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:text="@string/business_jilu"/>
                    <TextView
                        android:id="@+id/business_jilu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/sss"
                        android:textColor="@color/text_little_color"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/set_list_arrow"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout>
</LinearLayout>

