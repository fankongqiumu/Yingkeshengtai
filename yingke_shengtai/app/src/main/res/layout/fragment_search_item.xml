<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/item_image_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/tab_busiess_norma"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/item_text_progress"
        android:layout_width="75dp"
        android:layout_height="28dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:textSize="14sp"
        android:textColor="@color/white_color"/>
    <TextView
        android:id="@+id/item_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/item_text_progress"
        android:layout_toRightOf="@id/item_image_left"
        android:layout_marginLeft="15dp"
        android:paddingTop="10dp"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/fourty_sp"
        android:textColor="@color/text_little_color"/>
    <TextView
        android:id="@+id/item_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/fifty_sp"
        android:ellipsize="end"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/item_text_progress"
        android:layout_toRightOf="@id/item_image_left"
        android:layout_marginTop="6dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/item_text_time"
        android:textColor="@color/text_big_color"/>

</RelativeLayout>
